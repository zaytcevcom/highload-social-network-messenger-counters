root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 4

[{*.bash,*.zsh,*.sh}]
indent_size = 2
tab_width = 2

[Makefile]
indent_style = tab
tab_width = 4
indent_size = 4

[*.md]
trim_trailing_whitespace = false
